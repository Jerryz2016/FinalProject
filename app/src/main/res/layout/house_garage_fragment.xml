    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_garage_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jieli.finalproject.HouseGarage">


    <TextView

        android:id="@+id/house_frag_garage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"

        android:text="@string/GarageDoor"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <Switch

        android:id="@+id/house_garage_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFF333"
        android:textSize="30sp"
        tools:switchTextAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/house_frag_garage"
        android:layout_alignBottom="@+id/house_frag_garage"
        android:layout_toEndOf="@+id/house_garage_save"
        android:layout_marginStart="18dp" />


    <TextView
        android:id="@+id/house_garage_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/garageLight"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/house_garage_switch2"
        android:layout_alignBottom="@+id/house_garage_switch2" />

    <Switch

        android:id="@+id/house_garage_switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:background="#FFF333"
        android:textSize="30sp"
        android:layout_below="@+id/house_frag_garage"
        android:layout_alignStart="@+id/house_garage_switch" />

    <Button
        android:id="@+id/house_garage_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/house_Save"
        android:textSize="30sp"
        android:layout_below="@+id/house_garage_light"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/house1"
            android:id="@+id/imageView5"
            android:layout_below="@+id/house_garage_save"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>