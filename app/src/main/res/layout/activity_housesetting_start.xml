<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jieli.finalproject.HouseSettingStartActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/houseSettingHeader"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/houseSettingHeaderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AA08FF"
            android:text="Smart House Setting"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"/>

        <ListView
            android:id="@+id/houseSettingButton_List"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/houseSettingButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#AA08FF"/>

        <EditText
            android:id="@+id/houseSettingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>